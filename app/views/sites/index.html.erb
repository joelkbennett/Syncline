<article class='page-body content'>

  <div class="page-title">
    <h1>My Sites</h1>
  </div>

  <section class='section'>
    <div class="columns sites-columns">
      <% @sites.each do |site| %>
      <div class="column is-third-tablet is-quarter-desktop drill-card">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3 static-map">
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-5"><%= link_to site.site_name, site_path(site.id) %></p>
              </div>
            </div>
            <div class="content notification is-info">
              <label>Latitude:</label><span class="drill-hole-lat"> <%= number_with_precision(site.center_lat, precision: 3) %></span>
              <label>Longitude:</label><span class="drill-hole-lng"><%= number_with_precision(site.center_lng, precision: 3) %></span>
              <p>Drill Holes: <%= site.drill_holes.count %></p>
            </div>
          </div>
        </div>
        </div>
      <% end %>

      <div class="column is-third-tablet is-quarter-desktop new-site">
        <div class="new-site-card">
          <div class="add-site">
            <a id="add-site-button"><%= image_tag("add-site.png", :alt => "rss feed") %></a>
          </div>
          <div class="modal">
            <div class="modal-background"></div>
            <div class="modal-content">
              <div class="box">
                <div class="content">
                  <div>
                    <h1>Select site from map, or enter manually</h1>
                    <p class="control">
                      <%= form_for @site, remote: true do |f|   %>
                        <p>
                          <%= f.label 'Site Name:' %><br />
                          <%= f.text_field :site_name%>
                        </p>
                        <p>
                          <%= f.label 'Latitude: ' %><br />
                          <%= f.text_field :center_lat %>
                        </p>
                        <p>
                          <%= f.label 'Longitude: ' %><br />
                          <%= f.text_field :center_lng %>
                        </p>
                        <p>
                          <%= f.submit 'Create New Site' %>
                      <% end %>
                      <!-- <label for="new-site-name" class="label">Site Name: </label>
                      <input type="text" placeholder="Enter site name" id="new-site-name" class="input" />
                      <label for="new-site-latlng">Coordinates: </label>
                      <input type="text" placeholder="Enter site latitude, longitude(x,y)" id="new-site-latlng" class="input" />
                    </br><a id="submit-site" class="button is-primary">Create New Site</a> -->
                    </p>
                    <div id="geo-search-map" class='map'></div>
                  </div>
                </div>
              </div>
            </div>
            <button class="modal-close"></button>
          </div>
        </div>
      </div>
    </div>

  </section>

</article>
