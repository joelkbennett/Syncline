<article class='page-body content section'>
  <header class='page-header'>
    <h1 class='title is-1'><%= @drill_hole.name %></h1>
    <h2 class='subtitle is-3'><%= @drill_hole.site.site_name %></h2>
  </header>

  <section class='section drill-log'>

    <%= form_for @drill_hole, url: { action: 'edit' }, html: { class: 'columns' } do |f| %>
      <!-- TODO: Build a label helper as defined in the docs to generate labels with classes -->
      <div class="column is-5">
        <p class="control">
          <%= f.text_field :logged_by, class: 'input' %>
        </p>

        <p class="control">
          <%= f.number_field :dh_lat, class: 'input' %>
        </p>

        <p class="control">
          <%= f.number_field :dh_lng, class: 'input' %>
        </p>

        <p class="control">
          <%= f.number_field :ground_elev, class: 'input' %>
        </p>

        <p class="control">
          <%= f.number_field :depth, class: 'input' %>
        </p>
      </div>

      <div class="column is-5">
        <p class="control">
          <%= f.number_field :water_level_start, class: 'input' %>
        </p>

        <p class="control">
          <%= f.number_field :water_level_during, class: 'input' %>
        </p>

        <p class="control">
          <%= f.number_field :water_level_end, class: 'input' %>
        </p>                        

        <p class="control">
          <%= f.number_field :hole_size, class: 'input' %>
        </p>                

        <p class="control">
          <%= f.number_field :method, class: 'input' %>
        </p>                
      </div>

      <div class="column is-2">
        <p class="control">
          <%= f.submit "Edit", class: 'button button-full is-primary' %>
        </p>

        <p class="control">
          <button class="button button-full is-success">Mark as Reviewed</button>  
        </p>
      </div>

    <% end %>

