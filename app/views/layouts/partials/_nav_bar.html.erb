<header class='site-header'>

  <!-- Main container -->
  <nav class="navbar">
    <!-- Left side -->
    <div class="navbar-left">

      <div class="navbar-item">
        <h1 class="site-title">Syncline</h1>
      </div>
      <div class="navbar-item">
        <%= link_to "All Sites", sites_path, :class => "button is-primary" %>
        <a class="button is-primary">Add Site</a>
      </div>

    </div>

    <!-- Right side -->
    <div class="navbar-right">
      <% if current_user %>
        <p class="navbar-item"><a href="#">Hey, <%= current_user.first_name %></a></p>
        <p class="navbar-item"><%= link_to "Log out", sessions_path("current"), method: :delete %></p>
      <% else %>
        <p class="navbar-item"><%= link_to "Log In", new_sessions_path %> | <%= link_to "Sign Up", new_user_path %></p>
      <% end %>
    </div>
  </nav>

</header>
